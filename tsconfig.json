{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["DOM", "ES2017"],

    "baseUrl": "./src",
    "paths": {
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"]
    },

    "strict": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["**/*.ts"]
}
